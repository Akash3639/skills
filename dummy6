##myinventory.js

const express = require("express");
const cors = require("cors");

const app = express();
app.use(cors());
app.use(express.json());

const inventory = [
  { id: 1, prodname: "prod1", qty: 12, price: 12 },
  { id: 2, prodname: "prod2", qty: 1, price: 13 },
  { id: 3, prodname: "prod3", qty: 10, price: 14 },
  { id: 4, prodname: "prod4", qty: 19, price: 16 }
];

// GET all inventory
app.get("/", (req, res) => {
  res.json(inventory);
});

// POST â€“ add product
app.post("/add", (req, res) => {
  const invent = {
    id: req.body.id,
    prodname: req.body.name,   // Corrected
    qty: req.body.qty,
    price: req.body.price
  };

  inventory.push(invent);
  res.json(inventory);
});

app.listen(8000, () => {
  console.log("Express running at http://localhost:8000");
});


## run : node myinventory.js

##prg6-src- to_inventory.js


import React, { useState, useEffect } from "react";
import axios from "axios";

// DISPLAY INVENTORY
function Display_Inventory() {
  const [res, setRes] = useState([]);

  useEffect(() => {
    const resp = async () => {
      const response = await axios.get("http://localhost:8000");
      setRes(response.data);
    };
    resp();
  }, []);

  return (
    <div>
      <h1>Inventory Management</h1>
      <table border="1">
        <thead>
          <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          {res.map((inventory) => (
            <tr key={inventory.id}>
              <td>{inventory.id}</td>
              <td>{inventory.prodname}</td>
              <td>{inventory.qty}</td>
              <td>{inventory.price}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  );
}

// ADD INVENTORY
function AddInventory() {
  const [id, setId] = useState("");
  const [name, setName] = useState("");
  const [qty, setQty] = useState("");
  const [price, setPrice] = useState("");
  const [inventory, setInventory] = useState([]);

  const SubmitEvent = () => {
    const fo = { id, name, qty, price };

    const resp = async () => {
      await axios.post("http://localhost:8000/add", fo);
      const getresponse = await axios.get("http://localhost:8000");
      setInventory(getresponse.data);
    };
    resp();
  };

  return (
    <div>
      <h1>Add Inventory</h1>

      <table border="1">
        <tbody>
          <tr>
            <td>ID</td>
            <td>
              <input
                type="number"
                value={id}
                onChange={(e) => setId(e.target.value)}
              />
            </td>
          </tr>

          <tr>
            <td>Product Name</td>
            <td>
              <input
                type="text"
                value={name}
                onChange={(e) => setName(e.target.value)}
              />
            </td>
          </tr>

          <tr>
            <td>Quantity</td>
            <td>
              <input
                type="number"
                value={qty}
                onChange={(e) => setQty(e.target.value)}
              />
            </td>
          </tr>

          <tr>
            <td>Price</td>
            <td>
              <input
                type="number"
                value={price}
                onChange={(e) => setPrice(e.target.value)}
              />
            </td>
          </tr>

          <tr>
            <td colSpan="2">
              <button onClick={SubmitEvent}>Add Item</button>
            </td>
          </tr>
        </tbody>
      </table>

      <h2>Updated Inventory</h2>
      <pre>{JSON.stringify(inventory, null, 2)}</pre>
    </div>
  );
}

export { Display_Inventory, AddInventory };



##index.js


import React from 'react';
import ReactDOM from 'react-dom/client';
import './index.css';
import { AddInventory, Display_Inventory } from './to_inventory';

const root = ReactDOM.createRoot(document.getElementById('root'));
root.render(
  <React.StrictMode>
    <Display_Inventory />
    <AddInventory />
  </React.StrictMode>
);





